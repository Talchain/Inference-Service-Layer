{
  "dashboard": {
    "title": "ISL LLM Cost Analysis",
    "description": "Detailed LLM usage and cost breakdown for budget management",
    "tags": ["isl", "llm", "costs", "production"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "Cost by Model (Last 24h)",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 10},
        "targets": [
          {
            "expr": "sum(increase(isl_llm_cost_dollars[24h])) by (model)",
            "legendFormat": "{{model}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "pie",
          "displayLabels": ["name", "percent"],
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 2,
        "title": "Cost per Session Distribution",
        "type": "histogram",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 10},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(isl_llm_cost_dollars_bucket[1h])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(isl_llm_cost_dollars_bucket[1h])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(isl_llm_cost_dollars_bucket[1h])) by (le))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 3,
        "title": "Token Usage Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 10, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(isl_llm_tokens_total[5m])) by (token_type)",
            "legendFormat": "{{token_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "tokens/sec", "show": true},
          {"show": false}
        ],
        "stack": true,
        "fill": 2
      },
      {
        "id": 4,
        "title": "Budget Exceeded Events",
        "type": "stat",
        "gridPos": {"x": 12, "y": 10, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(isl_llm_budget_exceeded_total[1h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        },
        "alert": {
          "name": "Frequent Budget Exceeded",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [10]},
              "query": {"params": ["A", "1h", "now"]}
            }
          ],
          "message": "More than 10 sessions exceeded budget in 1 hour",
          "frequency": "5m"
        }
      },
      {
        "id": 5,
        "title": "Fallback to Rules Rate",
        "type": "graph",
        "gridPos": {"x": 18, "y": 10, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(isl_llm_fallback_to_rules_total[5m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "fallbacks/sec", "show": true},
          {"show": false}
        ]
      },
      {
        "id": 6,
        "title": "Cost Trend (7 Days)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 18, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(isl_llm_cost_dollars[1d]))",
            "legendFormat": "Daily Cost",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "USD", "show": true, "format": "currencyUSD"},
          {"show": false}
        ],
        "lines": true,
        "fill": 1,
        "thresholds": [
          {"value": 100, "colorMode": "critical", "op": "gt", "fill": false, "line": true}
        ]
      },
      {
        "id": 7,
        "title": "Top 10 Expensive Sessions",
        "type": "table",
        "gridPos": {"x": 0, "y": 26, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, sum(isl_llm_cost_dollars) by (session_id))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "session_id": "Session ID",
                "Value": "Cost (USD)"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "Cost Efficiency ($/deliberation)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 26, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(isl_llm_cost_dollars[24h])) / sum(increase(isl_habermas_deliberations_total[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.08, "color": "yellow"},
                {"value": 0.10, "color": "red"}
              ]
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["1m", "5m", "15m", "30m", "1h", "6h"]
    },
    "refresh": "1m",
    "version": 1,
    "uid": "isl-llm-costs"
  }
}
