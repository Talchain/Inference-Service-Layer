{
  "dashboard": {
    "title": "ISL Team Deliberation (Habermas)",
    "description": "Team alignment and deliberation effectiveness metrics",
    "tags": ["isl", "habermas", "deliberation", "team-alignment"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "Deliberation Sessions by Status",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum(isl_habermas_deliberations_total) by (status)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "active"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "converged"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "stalled"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            }
          ]
        }
      },
      {
        "id": 2,
        "title": "Rounds per Session Distribution",
        "type": "histogram",
        "gridPos": {"x": 8, "y": 0, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(isl_habermas_rounds_per_session_bucket[1h])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(isl_habermas_rounds_per_session_bucket[1h])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"label": "rounds", "show": true},
          {"show": false}
        ]
      },
      {
        "id": 3,
        "title": "Agreement Level Over Time",
        "type": "graph",
        "gridPos": {"x": 16, "y": 0, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "avg(isl_habermas_agreement_level)",
            "legendFormat": "Average Agreement",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "agreement (0-1)", "show": true, "min": 0, "max": 1},
          {"show": false}
        ],
        "lines": true,
        "fill": 2,
        "thresholds": [
          {"value": 0.7, "colorMode": "custom", "op": "gt", "fill": false, "line": true, "lineColor": "rgba(50, 172, 45, 0.5)"}
        ]
      },
      {
        "id": 4,
        "title": "Convergence Rate (24h)",
        "type": "stat",
        "gridPos": {"x": 0, "y": 8, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(increase(isl_habermas_convergence_rate[24h])) / sum(increase(isl_habermas_deliberations_total[24h])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 70, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Average Session Duration",
        "type": "stat",
        "gridPos": {"x": 6, "y": 8, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "avg(isl_habermas_session_duration_seconds)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 6,
        "title": "Values Extracted per Position",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "avg(isl_habermas_values_extracted_per_position)",
            "legendFormat": "Avg Values",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "count", "show": true},
          {"show": false}
        ]
      },
      {
        "id": 7,
        "title": "Concerns Identified per Position",
        "type": "graph",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "avg(isl_habermas_concerns_identified_per_position)",
            "legendFormat": "Avg Concerns",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "count", "show": true},
          {"show": false}
        ]
      },
      {
        "id": 8,
        "title": "Session Activity Timeline",
        "type": "graph",
        "gridPos": {"x": 0, "y": 14, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(isl_habermas_deliberations_total[5m])) by (status)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "sessions", "show": true},
          {"show": false}
        ],
        "stack": true,
        "fill": 2
      },
      {
        "id": 9,
        "title": "LLM Usage in Deliberation",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 22, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(isl_llm_requests_total{endpoint=~\".*deliberation.*|.*value.*|.*consensus.*\"}[24h])) by (endpoint)",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "donut",
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 10,
        "title": "Top Unresolved Disagreements",
        "type": "table",
        "gridPos": {"x": 12, "y": 22, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(5, sum(isl_habermas_unresolved_disagreements_total) by (disagreement_type))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "disagreement_type": "Disagreement Type",
                "Value": "Count"
              }
            }
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "refresh": "1m",
    "version": 1,
    "uid": "isl-deliberation"
  }
}
