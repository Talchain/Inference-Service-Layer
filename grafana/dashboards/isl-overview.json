{
  "dashboard": {
    "title": "ISL Overview - Production Health",
    "description": "High-level health metrics for Inference Service Layer",
    "tags": ["isl", "production", "overview"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (per minute)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(isl_requests_total[1m])) by (endpoint)",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "req/min", "show": true},
          {"show": false}
        ],
        "xaxis": {"show": true, "mode": "time"},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "nullPointMode": "null",
        "tooltip": {"shared": true, "sort": 0, "value_type": "individual"}
      },
      {
        "id": 2,
        "title": "P95 Latency by Endpoint",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(isl_request_duration_seconds_bucket[5m])) by (le, endpoint))",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "seconds", "show": true},
          {"show": false}
        ],
        "alert": {
          "name": "High P95 Latency",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [5]},
              "query": {"params": ["A", "5m", "now"]},
              "operator": {"type": "and"}
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "P95 latency exceeded 5s",
          "noDataState": "no_data"
        }
      },
      {
        "id": 3,
        "title": "Error Rate (%)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(isl_requests_total{status=~\"5..\"}[5m])) / sum(rate(isl_requests_total[5m])) * 100",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "percent", "show": true, "min": 0, "max": 100},
          {"show": false}
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [5]},
              "query": {"params": ["A", "5m", "now"]}
            }
          ],
          "message": "Error rate exceeded 5%"
        },
        "thresholds": [
          {"value": 1, "colorMode": "critical", "op": "gt", "fill": true, "line": true}
        ]
      },
      {
        "id": 4,
        "title": "LLM Cost per Hour",
        "type": "stat",
        "gridPos": {"x": 8, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(isl_llm_cost_dollars[1h]))",
            "legendFormat": "Cost/hour",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "auto",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        },
        "alert": {
          "name": "High LLM Costs",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [10]},
              "query": {"params": ["A", "1h", "now"]}
            }
          ],
          "message": "LLM costs exceeded $10/hour"
        }
      },
      {
        "id": 5,
        "title": "Cache Hit Rate (%)",
        "type": "stat",
        "gridPos": {"x": 16, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(isl_llm_cache_hits_total[5m])) / sum(rate(isl_llm_requests_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 30, "color": "yellow"},
                {"value": 50, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Active Deliberation Sessions",
        "type": "stat",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(isl_habermas_deliberations_total{status=\"active\"})",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 7,
        "title": "FACET Robustness Distribution",
        "type": "heatmap",
        "gridPos": {"x": 6, "y": 16, "w": 9, "h": 6},
        "targets": [
          {
            "expr": "sum(increase(isl_facet_robustness_score_bucket[10m])) by (le)",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": false,
          "cellGap": 2,
          "cellValues": {},
          "color": {
            "mode": "scheme",
            "scheme": "Spectral"
          },
          "yAxis": {
            "axisLabel": "Robustness Score"
          }
        }
      },
      {
        "id": 8,
        "title": "ActiVA Convergence Rate",
        "type": "graph",
        "gridPos": {"x": 15, "y": 16, "w": 9, "h": 6},
        "targets": [
          {
            "expr": "sum(rate(isl_activa_convergence_total[10m])) by (num_queries_bucket)",
            "legendFormat": "{{num_queries_bucket}} queries",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "convergence rate", "show": true},
          {"show": false}
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "refresh": "30s",
    "version": 1,
    "uid": "isl-overview"
  }
}
